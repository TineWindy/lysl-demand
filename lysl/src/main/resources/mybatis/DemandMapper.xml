<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.whu.lysl.dao.DemandDAO">

    <insert id="insertDemand">
      insert into lysl_demand_object (id,gmt_created,demand_id,institution_id,donee_id,material,material_num,address,status,description)
      values (#{id},#{gmtCreated},#{demandId},#{institutionId},#{doneeId},#{material},#{materialNum},#{address},#{status},#{description})
    </insert>

    <update id="modifyStatus" parameterType="string">
      update lysl_demand_object set
      status = #{param2}
      where demand_id = #{param1}
    </update>

    <select id="showUnreviewedDemands" resultType="com.whu.lysl.entity.dbobj.DemandDO">
      select *
      from lysl_demand_object
      where status = '未审核'
    </select>


</mapper>